#include"uart.h"
#include"keypad.h"
#include"lcd.h"
#include"app.h"
#include<util/delay.h>
#define CONTROL_READY 0x0A
#define DONE 0x0B
#define PROCEED 0x0C
#define REPEAT 0x0D
#define SUCCES 0x0E
#define FAIL 0x0F
#define HMI_READY 0x10
uint8 num;
uint8 pass[5];
uint8 confirmed_pass[5];
void STEP_3(void)
{
	_delay_ms(200);
		LCD_clearScreen();
		for(uint8 k=0;k<5;k++)
		{
				LCD_intgerToString(confirmed_pass[k]);
				_delay_ms(300);
		}
		LCD_displayString("plz enter pas:");
		LCD_moveCursor(1,0);
		while(UART_recieveByte()!=CONTROL_READY);
		while(1)
		{
			num=KEYPAD_getPressedKey();
			UART_sendByte(num);
			if(num=='+')
			{
						break;
			}
			LCD_intgerToString(num);
			_delay_ms(400);
		}
		UART_sendByte(DONE);
		while(UART_recieveByte()!=DONE);
		UART_sendByte(HMI_READY);
		LCD_clearScreen();
		LCD_moveCursor(0,0);
		uint8 status=UART_recieveByte();
		if(status==SUCCES)
			while(1)
		LCD_displayString("Door is unlocking");
		else if(status==FAIL)
			while(1)
			LCD_displayString("BYE");


}
void STEP_1(void)
{
	_delay_ms(100);
	uint8 i=0;
	LCD_clearScreen();
	LCD_displayString("plz enter pass:");
	LCD_moveCursor(1,0);
	while(1)
	{
		num=KEYPAD_getPressedKey();
		if(num=='+')
					break;
		LCD_intgerToString(num);
		pass[i]=num;
		_delay_ms(400);
	}
	_delay_ms(200);
	UART_sendByte(DONE);
	while(UART_recieveByte()!=CONTROL_READY);
	for(int j=0;j<5;j++)
		UART_sendByte(pass[j]);
	i=0;
	LCD_clearScreen();
	LCD_moveCursor(0,0);
	LCD_displayString("plz re-enter the");
	LCD_moveCursor(1,0);
	LCD_displayString("same pass: ");
	while(1)
	{
		num=KEYPAD_getPressedKey();
		if(num=='+')
			break;
		LCD_intgerToString(num);
		confirmed_pass[i]=num;
		_delay_ms(400);
	}
	LCD_clearScreen();
	UART_sendByte(DONE);
	while(UART_recieveByte()!=CONTROL_READY);
	for(int j=0;j<5;j++)
	UART_sendByte(confirmed_pass[j]);
	while(UART_recieveByte()!=DONE);
	UART_sendByte(HMI_READY);
	uint8 status=UART_recieveByte();
	if(status==PROCEED)
	STEP_2();
	else if(status==REPEAT)
	STEP_1();
}
void STEP_2(void)
{
	LCD_moveCursor(0,0);
	LCD_displayString("+ : Open door");
	LCD_moveCursor(1,0);
	LCD_displayString("- : change pass");
	while(1)
	{
		num=KEYPAD_getPressedKey();
		if(num=='-')
		{
			LCD_clearScreen();
			STEP_4();
		}
		else if(num=='+')
		{
			LCD_clearScreen();
			STEP_3();
		}
	}
}
void STEP_4(void)
{

}
int main()
{
UART_ConfigType UART_configu ={
		EIGHT_BIT,DISABLED,ONE_BIT,9600
};
UART_init(&UART_configu);
LCD_init();
STEP_1();
while(1)
{

}
}

